{
    "$schema": "https://docs.renovatebot.com/renovate-schema.json",
    "extends": ["config:base"],
    "major": {
        "enabled": true,
        "stabilityDays": 3,
        "prCreation": "not-pending",
        "groupName": "major dependencies"
    },
    "minor": {
        "enabled": true,
        "stabilityDays": 2,
        "prCreation": "not-pending",
        "groupName": "minor dependencies",
        "automerge": true,
        "automergeType": "pr"
    },
    "patch": {
        "enabled": true,
        "groupName": "patch dependencies"
    },
    "pin": {
        "enabled": false
    },
    "separateMinorPatch": true,
    "packageRules": [
        {
            "paths": ["+(package.json)"],
            "rangeStrategy": "bump"
        }
    ],
    "enabledManagers": ["npm"],
    "masterIssue": true,
    "labels": ["deps"],
    "prBodyNotes": ["cc @tzellman"]
}
